{
  "name": "offline-mesh-payments",
  "version": "1.0.0",
  "description": "Sistema de pagos offline con redes mesh usando EVVM, Hedera y XMTP",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "dev:build": "npm run build && node dist/index.js",
    "start": "node dist/index.js",
    "test": "jest",
    "test:app": "tsx src/test/testApp.ts",
    "send-payment": "tsx src/test/sendPayment.ts",
    "send-real-payment": "tsx src/test/sendRealPayment.ts",
    "view-transactions": "tsx src/test/viewTransactions.ts",
    "sync-payment": "tsx src/test/syncPayment.ts",
    "compile:contracts": "hardhat compile",
    "deploy:hedera": "hardhat run scripts/deploy-hedera.ts --network hedera-testnet"
  },
  "keywords": [
    "blockchain",
    "offline-payments",
    "mesh-network",
    "evvm",
    "hedera",
    "xmtp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "^14.1.2",
    "@chainsafe/libp2p-noise": "^12.0.2",
    "@hashgraph/sdk": "^2.47.0",
    "@libp2p/bootstrap": "^12.0.10",
    "@libp2p/crypto": "^5.1.13",
    "@libp2p/identify": "^4.0.9",
    "@libp2p/kad-dht": "^16.1.2",
    "@libp2p/mplex": "^12.0.10",
    "@libp2p/peer-id": "^6.0.4",
    "@libp2p/ping": "^3.0.9",
    "@libp2p/pubsub": "^10.1.18",
    "@libp2p/websockets": "^10.1.2",
    "@xmtp/xmtp-js": "^10.0.0",
    "cors": "^2.8.5",
    "datastore-core": "^11.0.2",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "figlet": "^1.9.4",
    "level": "^8.0.0",
    "libp2p": "^3.1.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "hardhat": "^2.19.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.2"
  }
}
